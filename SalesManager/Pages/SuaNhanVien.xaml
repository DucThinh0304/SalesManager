                <ColumnDefinition Width="208*"/>
                <ColumnDefinition Width="530*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    Text="Nhập lại MK: "
                    VerticalAlignment="Center"
                    FontSize="28" Margin="62,6,0,11" Foreground="#FF1DB7A4" Grid.ColumnSpan="2" Width="199"
                    />
            <PasswordBox
                    x:Name="tbRMK" 
                    Grid.ColumnSpan="4"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Height="40"
                    FontSize="24" 
                    Margin="206.8,0,0,11.6" 
                    HorizontalAlignment="Left" 
                    Width="520"/>
