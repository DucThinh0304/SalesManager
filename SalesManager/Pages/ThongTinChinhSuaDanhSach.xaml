<local:BasePage x:Class="SalesManager.ThongTinChinhSuaDanhSach"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManager"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="ThongTinChinhSuaDanhSach">

    <StackPanel>
        <Border x:Name="Title" 
                    Height="50"
                    Margin="20 10 20 10"
                    CornerRadius="20">
            <TextBlock 
                Text="CHỈNH SỬA HÀNG HÓA" 
                HorizontalAlignment="Center" 
                FontFamily="{StaticResource MyriadBold}"
                FontSize="36" 
                Foreground="#000080"/>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="20 50 20 50">
                <Label
                Content = "MÃ HÀNG"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4"
                    Margin=" 3"
                />
                <Label
                Content = "MÃ LÔ"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4"
                    Margin=" 3"
                />
                <Label
                Content = "TÊN HÀNG"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4"
                    Margin=" 3"
                />
                <Label
                Content = "NGÀY NHẬP"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4"
                    Margin=" 3"
               />
                <Label
                Content = "HẠN SỬ DỤNG"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4"
                    Margin=" 3"
                />
                <Label
                Content = "SỐ LƯỢNG"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4"
                    Margin=" 3"
                />
                <Label
                Content = "ĐƠN VỊ TÍNH"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4"
                    Margin=" 3"
                />

                <Label
                Content = "ĐƠN GIÁ"
                HorizontalAlignment = "Left"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "#FF1DB7A4" RenderTransformOrigin="0.478,1.561"
                    Margin=" 3"
                />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="20 50 100 5">
                <TextBox x:Name = "MAHG"
                     IsReadOnly="True"
                     VerticalAlignment = "Top"
                             FontSize = "20"
                         Margin=" 1"
                      />

                <TextBox x:Name = "MALOO"
                     IsReadOnly="True"
                    VerticalAlignment = "Top"
                             FontSize = "20"
                         Margin=" 1"
                  />

                <TextBox x:Name = "TENHG"
                     VerticalAlignment = "Top"
                             FontSize = "20"
                         Margin=" 1"
                
                    />

                <TextBox x:Name = "NGAY"    
                     IsReadOnly="True"
                    VerticalAlignment = "Top"
                        FontSize = "20"
                         Margin=" 1"
            
                    />

                <DatePicker x:Name = "HAN"
                    VerticalAlignment = "Top"
                FontSize = "20"
                            Margin=" 1"
                    />
                <TextBox x:Name = "SL"
                    VerticalAlignment = "Top"
                FontSize = "20"
                         Margin=" 1"
                    />
                <ComboBox x:Name = "DONVI"
                     IsReadOnly="True"
                    VerticalAlignment = "Top"
               FontSize = "20"
                          Margin=" 1"
                    />
                <TextBox x:Name = "GIA"
                    VerticalAlignment = "Top"
                    FontSize = "20"
                         Margin=" 1"/>
            </StackPanel>
        </Grid>
        <Grid Margin="0 200 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button
                Content = "LƯU" Grid.Column="0"
                HorizontalAlignment = "Center"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "White"
                 Width = "200" Click = "suathongtin" />

            <Button
                Content = "TRỞ LẠI" Grid.Column="1"
                HorizontalAlignment = "Center"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "White"
                 Click = "trolai" Width="200" />
            <Button
                Content = "XÓA" Grid.Column="2"
                HorizontalAlignment = "Center"
                FontWeight = "Bold"
                FontSize = "20"
                Foreground = "White"
                 Width = "200" Click = "xoathongtin" />
        </Grid>
    </StackPanel>
</local:BasePage>
