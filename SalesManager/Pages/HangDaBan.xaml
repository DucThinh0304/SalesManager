<local:BasePage x:Class="SalesManager.HangDaBan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HangDaBan">

    <Grid>
        <Border x:Name="Title" Margin="20 20 20 20" VerticalAlignment="Top"  Width="700"
                HorizontalAlignment="Center" >
            <Label 
                 Content="HÀNG ĐÃ BÁN " 
                HorizontalAlignment="Center" 
                FontWeight="Bold" 
                FontSize="40" 
                Foreground="#FF0536C0"
                Margin="193,51,201,290.6" Width="306"  
                />
        </Border>
        
        
        <Button
                Foreground="{StaticResource ForegroundLightBrush}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Width="220"
            Margin="570,397,10,17.6" Height="35" FontSize="21"
                 Click="Thoat_Click">
            THOÁT
        </Button>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <ListView Margin="65,148,36.2,37.6" Name="LISTBANHANG" FontSize="18" Grid.Column="0" HorizontalAlignment="Center">
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter Property="IsSelected" Value="True"/>
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Height" Value="30" />
                        <Setter Property="BorderBrush" Value="Blue"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Background" Value="#E7F8FE"/>
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView >
                        <GridViewColumn Header = "Mã Hàng" DisplayMemberBinding = "{Binding MAHANG}" Width = "150"></GridViewColumn>
                        <GridViewColumn Header = "Tên Hàng" DisplayMemberBinding = "{Binding TENHANG}" Width = "250"></GridViewColumn>
                        <GridViewColumn Header = "Đã Bán" DisplayMemberBinding = "{Binding SLBAN}" Width = "140"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

    </Grid>
</local:BasePage>
