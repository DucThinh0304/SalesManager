<Page x:Class="SalesManager.ThongTinDanhSachHangHoa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThongTinDanhSachHangHoa">

    <Grid>
        <Label 
                Content="CHỈNH SỬA DANH SÁCH HÀNG HÓA" 
                HorizontalAlignment="Center" 
                FontWeight="Bold" 
                FontSize="36" 
                Foreground="#FF0536C0"
                Margin="20 20 20 20"   />

        <Button
            Content="LƯU"                
                FontWeight="Bold" 
                FontSize="15" 
                Foreground="White"
                Margin="108,384,492,33.6"   />
        <Button
            Content="TRỞ LẠI"                
                FontWeight="Bold" 
                FontSize="15" 
                Foreground="White"
                Margin="489,384,111,33.6" />
        <DataGrid
            AutoGenerateColumns="False"
          EnableRowVirtualization="True"
          Height = "243"
          HorizontalAlignment="Left"
          ItemsSource="{Binding}"
          Margin = "10,116,0,0" 
          Name="dataGrid"
          RowDetailsVisibilityMode="VisibleWhenSelected"
          VerticalAlignment="Top"
          Width="780" >


            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Column1"
                            Binding="{Binding Path=Something1}"
                            Header = "MÃ"
                            Width = "85"/>

                <DataGridTextColumn x:Name="Column2"
                            Binding="{Binding Path=Something2}"
                            Header = "TÊN"
                            Width = "90"/>
                <DataGridTextColumn x:Name="Column3"
                            Binding="{Binding Path=Something3}"
                            Header = "NG.NHẬP" 
                            Width = "130"/>

                <DataGridTextColumn x:Name="Column4"
                            Binding="{Binding Path=Something4}"
                            Header = "HẠN SD"
                            Width = "120"/>
                <DataGridTextColumn x:Name="Column5"
                            Binding="{Binding Path=Something5}"
                            Header = "SL" 
                            Width = "80"/>
                <DataGridTextColumn x:Name="Column6"
                            Binding="{Binding Path=Something6}"
                            Header = "Đ.VỊ" 
                            Width = "90"/>

                <DataGridTextColumn x:Name="Column7"
                            Binding="{Binding Path=Something7}"
                            Header = "GIÁ"
                            Width = "90"/>

                <DataGridTextColumn x:Name="Column8"
                            Binding="{Binding Path=Something8}"
                            Header = "TỔNG" 
                            Width = "100"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>
