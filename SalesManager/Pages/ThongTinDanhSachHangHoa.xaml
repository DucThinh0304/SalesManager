<local:BasePage x:Class="SalesManager.ThongTinDanhSachHangHoa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThongTinDanhSachHangHoa">

    <Grid>
        <Label 
                Content="DANH SÁCH HÀNG HÓA" 
                HorizontalAlignment="Center" 
                FontWeight="Bold" 
                FontSize="36" 
                Foreground="#FF0536C0"
                Margin="186,40,186,-0.4"   />

        <Button
            Content = "CHỈNH SỬA"
            HorizontalAlignment = "Left"
             VerticalAlignment = "Bottom"
                FontWeight = "Bold"
                FontSize = "15"
                Foreground = "White"
                Margin = "107,0,0,82.6" Click = "CHINHSUA" Width="180" />

        <Button
            Content = "TRỞ LẠI"
            HorizontalAlignment = "Right"
            VerticalAlignment = "Bottom"
                FontWeight = "Bold"
                FontSize = "15"
                Foreground = "White"
                Margin = "0,0,107,82.6" Click = "TROLAI" Width="180" RenderTransformOrigin="0.484,1.966" />
        <ListView 
            Name="listhanghoa" 
            HorizontalAlignment="Center"
            VerticalAlignment = "Top"
            Margin = "-132,128,-123,-58.4"
            Width = "1055"
            FontSize="15" Height="380"   >
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="IsSelected" Value="True"/>
                        </Trigger>
                    </Style.Triggers>
                    <EventSetter Event="PreviewGotKeyboardFocus" Handler="SelectCurrentItem"/>
                    <Setter Property="Height" Value="30" />
                    <Setter Property="BorderBrush" Value="Blue"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="#E7F8FE"/>
                </Style>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <EventSetter Event="MouseDoubleClick"  Handler="ListViewItem_MouseDoubleClick"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView >
                    <GridViewColumn Header = "MÃ HÀNG" DisplayMemberBinding = "{Binding MAHANG}" Width = "150"></GridViewColumn>
                    <GridViewColumn Header = "MÃ LÔ" DisplayMemberBinding = "{Binding MALO}" Width = "120"></GridViewColumn>
                    <GridViewColumn Header = "TÊN" DisplayMemberBinding = "{Binding TENHANG}" Width = "130"></GridViewColumn>
                    <GridViewColumn Header = "NGÀY NHẬP" DisplayMemberBinding = "{Binding NGNHAP}" Width = "160"></GridViewColumn>
                    <GridViewColumn Header = "HẠN SD" DisplayMemberBinding = "{Binding HANSD}" Width = "160"></GridViewColumn>
                    <GridViewColumn Header = "SL" DisplayMemberBinding = "{Binding SOLUONG}" Width = "80"></GridViewColumn>
                    <GridViewColumn Header = "ĐƠN VỊ"  DisplayMemberBinding = "{Binding DVT}" Width = "115"></GridViewColumn>
                    <GridViewColumn Header = "GIÁ" DisplayMemberBinding = "{Binding DONGIA}" Width = "140"></GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</local:BasePage>
