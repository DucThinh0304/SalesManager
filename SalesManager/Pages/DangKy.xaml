<Page x:Class="SalesManager.Pages.DangKy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManager.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        d:DesignHeight="530" d:DesignWidth="600"
         Title="Đăng ký tài khoản cho cửa hàng">
    <Grid>
        <materialDesign:Card HorizontalAlignment="Center"
                             VerticalAlignment="Center" Height="502" Margin="10,13,10,0" Width="580">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="30*"></RowDefinition>
                    <RowDefinition Height="60*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock 
            FontSize="50" 
            FontFamily="/SalesManager;component/Fonts/#Myriad Pro" 
            FontWeight="Bold" 
            Foreground="#0288D1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            Đăng Ký
                    </TextBlock>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBlock Text="Tên cửa hàng:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                               Grid.Row="2"></TextBlock>
                    <TextBox
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="154,-8,50,0" Height="auto" VerticalAlignment="Top"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Text="Mã cửa hàng:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                              ></TextBlock>
                    <TextBox
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="152,-8,294,10"/>
                    <TextBlock Text="Ngày thành lập:"
                               Margin="300,10,10,10"
                               FontSize="15" 
                               ></TextBlock>
                    <DatePicker
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                Margin="416,-8,50,10" />
                </Grid>
                <Grid Grid.Row="3">
                    <TextBlock Text="Tên quản lí:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                               Grid.Row="2"></TextBlock>
                    <TextBox
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="142,-8,50,0" Height="auto" VerticalAlignment="Top"/>
                </Grid>
                <Grid Grid.Row="4">
                    <TextBlock Text="Mã quản lí:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                              ></TextBlock>
                    <TextBox
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="142,-8,270,10"/>
                    <TextBlock Text="Ngày sinh:"
                               Margin="328,10,-18,10"
                               FontSize="15" 
                               ></TextBlock>
                    <DatePicker
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                Margin="410,-8,50,10" />
                </Grid>
                <Grid Grid.Row="5">
                    <TextBlock Text="Số điện thoại:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                               Grid.Row="2"></TextBlock>
                    <TextBox
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="154,-8,50,0" Height="auto" VerticalAlignment="Top"/>
                </Grid>
                <Grid Grid.Row="6">
                    <TextBlock Text="Địa chỉ:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                               Grid.Row="2"></TextBlock>
                    <TextBox
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="116,-8,50,0" Height="auto" VerticalAlignment="Top"/>
                </Grid>
                <Grid Grid.Row="7">
                    <TextBlock Text="CMND/CCCD (Tên đăng nhâp):"
                               Margin="50,10,10,10"
                               FontSize="15" 
                               Grid.Row="2"></TextBlock>
                    <TextBox
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="268,-8,50,0" Height="auto" VerticalAlignment="Top"/>
                </Grid>
                <Grid Grid.Row="8">
                    <TextBlock Text="Mật khẩu:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                               Grid.Row="2"></TextBlock>
                    <PasswordBox
                        Margin="129,2,55,10"/>
                    
                </Grid>
                <Grid Grid.Row="9">
                    <TextBlock Text="Nhập lại mật khẩu:"
                               Margin="50,10,10,10"
                               FontSize="15" 
                               Grid.Row="2"></TextBlock>
                    <PasswordBox
                        Margin="189,2,55,10"/>
                </Grid>
                <Grid Grid.Row="10">
                    <Button
                        Style="{StaticResource 
                        MaterialDesignRaisedDarkButton}"
                        Width="100"
                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                        Background  ="#3CACE8" Margin="162,21,318,21">
                        Hoàn tất
                    </Button>
                    <Button
                        Style="{StaticResource 
                        MaterialDesignRaisedDarkButton}"
                        Width="100"
                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                        Background="#3CACE8" Margin="320,21,160,21">
                        Hủy
                    </Button>
                </Grid>

            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
