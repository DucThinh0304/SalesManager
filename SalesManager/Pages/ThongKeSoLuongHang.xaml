<local:BasePage x:Class="SalesManager.ThongKeSoLuongHang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManager"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="900"
      Title="ThongKeSoLuongHang">


    <StackPanel>
        <TextBlock x:Name="Title"
                TextWrapping="Wrap" 
                Text="THỐNG KÊ SỐ LƯỢNG HÀNG"
                VerticalAlignment="Top" 
                HorizontalAlignment="Center" 
                FontWeight="Bold" 
                FontSize="36" 
                FontFamily="{StaticResource MyriadBold}"
                Foreground="#FF0536C0"
                Margin="20 20 20 20"
                />
        <Grid Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="SapXep_ComboBox" FontSize="20" Grid.Column="0"  Margin="10,0,10,10" SelectedValuePath="Content">
                <ComboBoxItem Content="Sắp Xếp Theo Tên"/>
                <ComboBoxItem Content="Sắp Xếp Theo Giá"/>
                <ComboBoxItem Content="Sắp Xếp Theo Hạn Sử Dụng"/>
                <ComboBoxItem Content="Sắp Xếp Theo Số Lượng"/>
                <ComboBoxItem Content="Sắp Xếp Theo Tổng Giá"/>
            </ComboBox>
            <ComboBox x:Name="SapXepTheo_ComboBox" FontSize="20" Grid.Column="1"  Margin="10,0,10,10" SelectedValuePath="Content">
                <ComboBoxItem Content="Tăng Dần"/>
                <ComboBoxItem Content="Giảm Dần"/>
            </ComboBox>
            <Border BorderBrush="Black"
            BorderThickness="0"
            Margin="10,0,10,0"
            VerticalAlignment="Center"
            CornerRadius="5"
            Grid.Column="2">

                <StackPanel Margin="5"
                    Orientation="Horizontal">

                    <Image Source="/Images/Logo/Search-icon.png" 
                   Height="25"/>
                    <TextBox x:Name="TimKiem_TextBox"
                       Margin="3 0 0 0" Width="400" FontSize="20"/>

                </StackPanel>
            </Border>
        </Grid>
        <StackPanel>
            <ListView Margin="10" Name="lvUsers" FontSize="20" Height="525">
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter Property="IsSelected" Value="True"/>
                            </Trigger>
                        </Style.Triggers>
                        <EventSetter Event="PreviewGotKeyboardFocus" Handler="SelectCurrentItem"/>
                        <Setter Property="Height" Value="30" />
                        <Setter Property="BorderBrush" Value="Blue"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Background" Value="#E7F8FE"/>
                    </Style>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Focusable" Value="false"/>
                    </Style>
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">

                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header = "Mã Hàng" DisplayMemberBinding = "{Binding MAHANG}" Width = "80"></GridViewColumn>
                        <GridViewColumn Header = "Mã Lô" DisplayMemberBinding = "{Binding MALO}" Width = "60"></GridViewColumn>
                        <GridViewColumn Header = "Tên Hàng" DisplayMemberBinding = "{Binding TENHANG}" Width = "300"></GridViewColumn>
                        <GridViewColumn Header = "Số Lượng" DisplayMemberBinding = "{Binding SOLUONG}" Width = "100"></GridViewColumn>
                        <GridViewColumn Header = "HSD" DisplayMemberBinding = "{Binding HSD}" Width = "100"></GridViewColumn>
                        <GridViewColumn Header = "Giá" DisplayMemberBinding = "{Binding GIA}" Width = "125"></GridViewColumn>
                        <GridViewColumn Header = "Tổng Giá" DisplayMemberBinding = "{Binding TONGGIA}" Width = "135"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Border x:Name="Sum_Border" Margin="20 5 20 5" Width="400" HorizontalAlignment="Right">
                <TextBlock x:Name="TongTien_TextBlock" HorizontalAlignment="Center" FontSize="25" Margin="0 3 0 0" FontFamily="{StaticResource MyriadBold}" Foreground="Chocolate"></TextBlock>
            </Border>
        </StackPanel>
    </StackPanel>
</local:BasePage>
